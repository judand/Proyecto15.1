<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleActivityEventos"
    android:background="@drawable/backgroud_gradient"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:drawableBottom="@drawable/ic_arrow_back_black_24dp"
                    android:id="@+id/atras"/>

                <ImageView
                    android:id="@+id/image_view_deta"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:cropToPadding="true"
                    android:paddingTop="6dp"
                    android:src="@mipmap/ic_launcher" />


            </RelativeLayout>


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                >

                <Button
                    android:id="@+id/compartir"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:drawableBottom="@drawable/ic_share_black_24dp" />

                <Button
                    android:id="@+id/like_boton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="5dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:drawableBottom="@drawable/ic_favorite_blue_24dp" />



            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    app:cardBackgroundColor="#40a8c4"
                    >
                    <TextView

                        android:id="@+id/text_title_deta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:text="Nombre "
                        android:fontFamily="@font/fuis"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"

                        />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/text_lugar_deta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="lugar"
                    android:fontFamily="@font/fuis"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/text_capacidad_deta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="capacidad"
                    android:fontFamily="@font/fuis"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/text_fecha_deta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="fecha"
                    android:fontFamily="@font/fuis"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/text_hora_deta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="hora"
                    android:fontFamily="@font/fuis"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/text_costoboleta_deta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="costoboleta"
                    android:fontFamily="@font/fuis"
                    android:textStyle="bold"
                    android:textColor="#66bb6a"
                    android:layout_marginLeft="5dp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/text_descripcion_deta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="descripcion"
                        android:fontFamily="@font/fuis"
                        android:layout_margin="10dp"
                        android:padding="2dp"
                        android:textColor="@color/cardview_dark_background"
                        android:typeface="serif"
                        />
                </android.support.v7.widget.CardView>

                <Button
                        android:id="@+id/boton_cancelar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Cancelar asistencia"
                        android:background="@drawable/button_cancel"
                        android:textColor="@color/colorPrimary"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>


</ScrollView>
