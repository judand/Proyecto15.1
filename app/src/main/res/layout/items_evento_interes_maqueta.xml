<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_h"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/text_title_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo "
                android:fontFamily="@font/fuis"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_lugar_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fuis"
                android:text="lugar" />

            <TextView
                android:id="@+id/text_fecha_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fecha"
                android:fontFamily="@font/fuis"/>

            <TextView
                android:id="@+id/text_organiza_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organiza:"
                android:textSize="16dp"
                android:fontFamily="@font/fuis"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_costoboleta_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textSize="18dp"
                android:fontFamily="@font/fuis"
                android:textColor="#66bb6a"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/like_boton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:drawableBottom="@drawable/ic_favorite_blue_24dp"

                    />

                <TextView
                    android:id="@+id/text_likes"
                    android:layout_width="29dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0" />


                <Button
                    android:id="@+id/boton_coment"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/cardview_light_background"
                    android:gravity="center"
                    android:text="Calificar"
                    android:textColor="@color/colorPrimary"

                    />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/boton_compartir"
                    android:backgroundTint="@color/cardview_light_background"
                    android:drawableBottom="@drawable/ic_share_black_24dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>